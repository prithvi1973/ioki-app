<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/listItemActionButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_column="4"
                android:layout_row="2"
                android:layout_rowSpan="3"
                android:background="@color/cardview_light_background"
                android:src="@mipmap/baseline_offline_bolt_24"
                android:layout_marginRight="10dp"/>

            <ImageButton
                android:id="@+id/updateItemActionButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_column="6"
                android:layout_marginRight="10dp"
                android:layout_row="2"
                android:layout_rowSpan="3"
                android:background="@color/cardview_light_background"
                android:src="@mipmap/baseline_edit_black_24" />

            <ImageButton
                android:id="@+id/shareItemActionButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_column="5"
                android:layout_marginRight="10dp"
                android:layout_row="2"
                android:layout_rowSpan="3"
                android:background="@color/cardview_light_background"
                android:src="@mipmap/baseline_share_black_24" />

            <ImageButton
                android:id="@+id/deleteItemActionButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_column="7"
                android:layout_row="2"
                android:layout_rowSpan="3"
                android:background="@color/cardview_light_background"
                android:cropToPadding="false"
                android:src="@mipmap/baseline_delete_black_24" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/listItemHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:text="Heading"
                android:textSize="20dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/listItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="4"
                android:text="Description" />

        </GridLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>